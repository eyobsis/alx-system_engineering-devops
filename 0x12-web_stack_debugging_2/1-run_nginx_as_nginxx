#!/usr/bin/env bash
# This script configures the container to run Nginx as the nginx user,
# listening on all active IPs on port 8080.

# Ensure that the "nginx" user exists
useradd -m -s /bin/bash nginx

# Update the nginx configuration to run as the nginx user
sed -i 's/user www-data;/user nginx;/' /etc/nginx/nginx.conf

# Remove duplicate location in nginx.conf (if exists)
sed -i '/location \//d' /etc/nginx/nginx.conf

# Adjust the location block to fix proxy_pass directive issue
sed -i 's/\(location \/ {\)/\1\n        proxy_pass http:\/\/127.0.0.1:5000;/' /etc/nginx/nginx.conf

# Make sure Nginx is listening on port 8080 for all active IPs
sed -i 's/listen 80 default_server;/listen 8080 default_server;/' /etc/nginx/sites-available/default

# Test the Nginx configuration
nginx -t

# Restart Nginx only if the configuration test passes
if [ $? -eq 0 ]; then
    service nginx restart
    echo "Nginx restarted successfully."
else
    echo "Error: Nginx configuration test failed. Check the Nginx configuration."
fi

# Ensure that Nginx is running as the nginx user
ps auxff | grep ngin[x]
